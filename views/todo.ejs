<body class="font-sans">
  <%
    function formatDate(date) {
      return new Date(date).toISOString().split('T')[0];
    }

    function getCurrentDate() {
      return new Date().toISOString().split('T')[0];
    }
  %>
  <div class="w-full mb-8">
    <h1 class="text-2xl font-bold text-gray-800 mb-6">My Tasks</h1>
    <div class="space-y-6">
      <!-- Overdue Tasks -->
      <div class="bg-white shadow-2xl rounded-xl p-6">
        <h2 class="text-xl font-medium text-red-600 mb-4">Over Due Tasks</h2>
        <ul>
          <% for (var i = 0; i < getTodos.length; i++) { %>
          <% if (formatDate(getTodos[i].dueDate) < getCurrentDate()) { %>
          <li class="flex items-center border-b border-gray-100 last:border-none py-4 hover:bg-gray-50 rounded-lg">
            <!-- Checkbox -->
            <label class="flex items-center justify-center h-full mr-4">
              <input type="checkbox" class="peer sr-only">
              <div class="relative flex items-center justify-center w-5 h-5 border-2 border-gray-300 rounded 
                    peer-checked:bg-blue-600 
                    peer-checked:border-blue-600 
                    transition-all duration-200 
                    hover:border-blue-400
                    active:scale-90
                    after:content-[''] 
                    after:absolute
                    after:w-2 
                    after:h-3.5 
                    after:border-white 
                    after:border-r-2 
                    after:border-b-2 
                    after:transform 
                    after:rotate-45 
                    after:opacity-0 
                    after:z-10
                    after:translate-y-[-2px]
                    peer-checked:after:opacity-100
                    peer-active:scale-90
                    cursor-pointer"></div>
            </label>

            <!-- Task Content -->
            <div class="flex-1">
              <div class="flex justify-between items-center">
                <!-- Task Title -->
                <span class="text-gray-700 font-medium">
                  <%= getTodos[i].title %>
                </span>
                <!-- Due Date -->
                <span class="text-sm text-red-500">
                  <%= getTodos[i].dueDate %>
                </span>
                <a href="#">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
                    <path fill-rule="evenodd" d="M16.5 4.478v.227a48.816 48.816 0 0 1 3.878.512.75.75 0 1 1-.256 1.478l-.209-.035-1.005 13.07a3 3 0 0 1-2.991 2.77H8.084a3 3 0 0 1-2.991-2.77L4.087 6.66l-.209.035a.75.75 0 0 1-.256-1.478A48.567 48.567 0 0 1 7.5 4.705v-.227c0-1.564 1.213-2.9 2.816-2.951a52.662 52.662 0 0 1 3.369 0c1.603.051 2.815 1.387 2.815 2.951Zm-6.136-1.452a51.196 51.196 0 0 1 3.273 0C14.39 3.05 15 3.684 15 4.478v.113a49.488 49.488 0 0 0-6 0v-.113c0-.794.609-1.428 1.364-1.452Zm-.355 5.945a.75.75 0 1 0-1.5.058l.347 9a.75.75 0 1 0 1.499-.058l-.346-9Zm5.48.058a.75.75 0 1 0-1.498-.058l-.347 9a.75.75 0 0 0 1.5.058l.345-9Z" clip-rule="evenodd" />
                  </svg>
