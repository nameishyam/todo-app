<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="font-sans">
  <%
    function formatDate(date) {
      return new Date(date).toISOString().split('T')[0];
    }

    function getCurrentDate() {
      return new Date().toISOString().split('T')[0];
    }
  %>
  <div class="w-full mb-8">
    <h1 class="text-2xl font-bold text-gray-800 mb-6">My Tasks</h1>
    <div class="space-y-6">
      <!-- Overdue Tasks -->
      <div class="bg-white shadow-2xl rounded-xl p-6">
        <h2 class="text-xl font-medium text-red-600 mb-4">Over Due Tasks</h2>
        <ul>
          <% for (var i = 0; i < getTodos.length; i++) { %>
          <% if (formatDate(getTodos[i].dueDate) < getCurrentDate()) { %>
          <li class="flex items-center border-b border-gray-100 last:border-none py-4 hover:bg-gray-50 rounded-lg">
            <!-- Checkbox -->
            <label class="flex items-center justify-center h-full mr-4">
              <input type="checkbox" class="peer sr-only">
              <div class="relative flex items-center justify-center w-5 h-5 border-2 border-gray-300 rounded 
                    peer-checked:bg-blue-600 
                    peer-checked:border-blue-600 
                    transition-all duration-200 
                    hover:border-blue-400
                    active:scale-90
                    after:content-[''] 
                    after:absolute
                    after:w-2 
                    after:h-3.5 
                    after:border-white 
                    after:border-r-2 
                    after:border-b-2 
                    after:transform 
                    after:rotate-45 
                    after:opacity-0 
                    after:z-10
                    after:translate-y-[-2px]
                    peer-checked:after:opacity-100
                    peer-active:scale-90
                    cursor-pointer"></div>
            </label>
            <!-- Task Content -->
            <div class="flex-1">
              <div class="flex justify-between items-center">
                <!-- Task Title -->
                <span class="text-gray-700 font-medium">
                  <%= getTodos[i].title %>
                </span>
                <!-- Due Date -->
                <span class="text-sm text-red-500">
                  <%= getTodos[i].dueDate %>
                </span>
              </div>
              <!-- Optional: Add task description or additional info here -->
            </div>
          </li>
          <% } %>
          <% } %>
        </ul>
      </div>

      <!-- Due Today Tasks -->
